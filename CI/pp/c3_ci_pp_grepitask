#!/data/Software/mydan/perl/bin/perl -I/data/Software/mydan/CI/lib -I/data/Software/mydan/CI/private/lib
use strict;
use warnings;

binmode STDIN, ':utf8';
binmode STDOUT, ':utf8';
binmode STDERR, ':utf8';

$|++;

use MYDB;
use FindBin qw( $RealBin );
use MYDan::Util::OptConf;
use YAML::XS;
use Encode;
use JobHash;

=head1 SYNOPSIS

 $0 id1 id2 ... idn

=cut

my $db = MYDB->new( "$RealBin/../conf/conn" );
my $jobhash = JobHash->new( $db );

sub grepitask
{
    my $str = shift;
    my $id = split /;|\s+/, $str;
    die "id err" unless $id =~ /^\d+$/;

    return unless $jobhash->hash( $id );
    print "$str\n";
}

if( @ARGV )
{
    map{ grepitask($_) }@ARGV;
}
else
{
    while(<STDIN>){ chomp; grepitask($_); }
}
